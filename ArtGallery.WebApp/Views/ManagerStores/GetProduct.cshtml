@*@model IEnumerable<ArtGallery.Data.Entities.Product>*@
@using ArtGallery.Data.Entities
@{
    Layout = "_Layout";
}
<!--middle content-->
<div id="container">
    <div class="container">
        <div class="row">
            <!--left sidebar---->
            <aside class="col-sm-3 left-sidebar">
                <div class="box category">
                    <div class="box-heading">
                        <h3>Stores<i class="fa fa-angle-up"></i></h3>
                    </div>

                    <div class="box-content test">
                        <div class="box-category">
                            <ul class="menu">
                                <li><a asp-action="GetAuction" asp-controller="ManagerStores" class="custom_hover">Auction</a></li>
                                <li><a asp-action="AddAuction" asp-controller="ManagerStores" class="custom_hover"> Add Auction</a></li>
                                <li><a asp-action="GetProduct" asp-controller="ManagerStores" class="custom_hover">Product</a></li>
                                <li><a asp-action="CreateProduct" asp-controller="ManagerStores" class="custom_hover">Add Products</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="box special">
                    <div class="box-heading">
                        <h3>Special</h3>
                    </div>
                    <div class="box-content">
                        <div class="product-layout">
                            <ul class="list-unstyled">
                                <li>
                                    <div class="product-thumb transiction">
                                        <a class="compare-button"><i class="fa fa-retweet"></i></a>
                                        <a class="wishlist-button"><i class="fa fa-heart-o"></i></a>
                                        <div class="image"><a href="single-product.html"><img src="images/img1.jpg" class="img-responsive"></a></div>
                                        <div class="caption">
                                            <div class="product-name"><a>Texture Design</a></div>
                                            <div class="price">
                                                <span class="price-new">$34.90</span>
                                                <span class="price-old">$49.50</span>
                                            </div>
                                        </div>
                                        <div class="cart-button">
                                            <a class="btn btn-add-cart" href="cart.html">
                                                <span>
                                                    Add to Cart
                                                </span>
                                                <i class="fa fa-shopping-cart"></i>
                                            </a>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            </aside>
            <!--end sidebar-->
            <!--main content-->
            <div class="col-sm-9 single-product" id="content">
                <ul class="breadcrumb">
                    <li><a href="home.html"><i class="fa fa-home"></i></a></li>
                    <li><a href="single-product.html">Store Management</a></li>
                </ul>
                <!--related product-->
                <div class="box related-product-heading margin-top">
                    <div class="box-heading">
                        <h3>Product Management</h3>
                    </div>
                    <div class="box-content">
                        <ul class="related-slider">
                            @foreach (var item in ViewBag.products as IEnumerable<Product>)
                            {
                                <li class="slide-wrap-img">
                                    <div class="product-thumb transiction">
                                        @foreach (ProductImage img in item.ProductImages)
                                        {
                                            if (img.Thumbnail == true)
                                            {
                                                <div class="image"><a href="single-product.html"><img src="@Url.Content(img.ImagePath)" class="img-responsive"></a></div>
                                            }
                                        }
                                        <div class="caption">
                                            <div class="product-name"><a href="single-product.html">@item.Title</a></div>
                                            <div class="price">
                                                <span class="price-new">$@item.Price</span>
                                            </div>
                                        </div>
                                        <div class="cart-button">
                                            <a asp-action="DeleteProduct" asp-controller="ManagerStores" asp-route-id="@item.Id">Delete</a>
                                            <a asp-action="UpdateProduct" asp-controller="ManagerStores" asp-route-id="@item.Id">Update</a>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <!--end-->
            </div>
            <!--end main content-->
        </div>
    </div>
</div>
<!--End of middle content-->