@model ArtGallery.ViewModel.Catalog.Products.InsertProductRequest
@using ArtGallery.ViewModel.Catalog.Products
@{
    Layout = "_Layout";
    ViewData["Title"] = "Gallery";
}
<!--middle content-->
<div id="container">
    <div class="container">
        <div class="row">
            <!--left sidebar---->
            <aside class="col-sm-3 left-sidebar">
                <div class="box category">
                    <div class="box-heading">
                        <h3>@ViewData["Title"]<i class="fa fa-angle-up"></i></h3>
                    </div>
                    <div class="box-content test">
                        <div class="box-category">
                            <ul class="menu">
                                <li><a asp-action="GetAuction" asp-controller="ManagerStores" class="custom_hover">Auction</a></li>
                                <li><a asp-action="AddAuction" asp-controller="ManagerStores" class="custom_hover"> Add Auction</a></li>
                                <li><a asp-action="GetProduct" asp-controller="ManagerStores" class="custom_hover">Product</a></li>
                                <li><a asp-action="CreateProduct" asp-controller="ManagerStores" class="custom_hover">Add Products</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="box special">
                </div>
            </aside>
            <!--end sidebar-->
            <!--main content-->
            <div class="col-sm-9" id="content">
                <ul class="breadcrumb">
                    <li><a asp-action="Home" asp-controller="Home"><i class="fa fa-home"></i></a></li>
                    <li><a asp-action="CreateProduct" asp-controller="ManagerStores">Create</a></li>
                </ul>
                <h2>Create Product</h2>
                <form class="form-horizontal" asp-action="CreateProduct" asp-controller="ManagerStores" method="post" enctype="multipart/form-data">
                    <fieldset id="account">
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Title:</label>
                            <div class="col-sm-8">
                                <span asp-validation-for="Title" class="text-danger"></span>
                                <input type="text" class="form-control" asp-for="Title">
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Description:</label>                         
                            <div class="col-sm-8">
                                <span asp-validation-for="Description" class="text-danger"></span>
                                <textarea type="text" cols="40" rows="5" class="form-control" asp-for="Description"></textarea>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Price:</label>
                            <div class="col-sm-8">
                                <span asp-validation-for="Price" class="text-danger"></span>
                                <input type="text" class="form-control" asp-for="Price">
                            </div>
                        </div>

                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Categories:</label>
                            <div class="col-sm-8">
                                <span asp-validation-for="ListCategoryId" class="text-danger"></span>
                                <span class="text-danger">@Html.ValidationMessage("msgCate")</span>
                                <div class="form-check form-check-inline">

                                    @{
                                        for (int i = 0; i < Model.Selecteds.Count; i++)
                                        {
                                            <input type="hidden" class="form-control" asp-for="@Model.Selecteds[i].Id" value="@Model.Selecteds[i].Id">
                                            @*<span>@Model.Selecteds[i].Name</span>*@
                                            @*<label class="form-check-label" for="inlineCheckbox1">@Model.Selecteds[i].Name</label>*@

                                            <input class="form-check-input" type="checkbox" asp-for="@Model.Selecteds[i].Selescted">
                                            <label style="font-weight:500; padding:2px;" class="form-check-label" for="inlineCheckbox1">@Model.Selecteds[i].Name</label>
                                            <br />
                                        }
                                    }
                                </div>
                            </div>
                          
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Thumbnail:</label>
                            <div class="col-sm-8">
                                <span asp-validation-for="Thumbnail" class="text-danger"></span>
                                <input type="file" class="form-control" asp-for="Thumbnail">
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Images:</label>                          
                            <div class="col-sm-8">
                                <span asp-validation-for="Images" class="text-danger"></span>
                                <input type="file" class="form-control" asp-for="Images" multiple="multiple">
                            </div>
                        </div>
                    </fieldset>
                    <div class="buttons">
                        <div class="pull-right">
                            @*I have read and agree to the <a class="agree"><b>Privacy Policy</b></a> <input type="checkbox" value="1" name="agree" style="vertical-align:text-bottom">*@
                            
                            <input type="submit" class="btn btn-custom" value="Create">
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
            <!--end main content-->
        </div>
    </div>
</div>
<!--End of middle content-->
