@using ArtGallery.Data.Entities
@{
    ViewData["Title"] = "Auction";
    Layout = "_Layout";
}
<!--middle content-->
<div id="container">
    <div class="container">
        <div class="row">
            <!--left sidebar---->
            <aside class="col-sm-3 left-sidebar">
                <div class="box category">
                    <div class="box-heading">
                        <h3>@ViewData["Title"] <i class="fa fa-angle-up"></i></h3>
                    </div>
                    <div class="box-content test">
                        <div class="box-category">
                            <ul class="menu">
                                <li><a class="custom_hover">Auction Comming</a></li>
                                <li><a class="custom_hover">Auction Ended</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </aside>
            <!--end sidebar-->
            <!--main content-->
            <div class="col-sm-9" id="content">
                <ul class="breadcrumb">
                    <li><a asp-action="Home"><i class="fa fa-home"></i></a></li>
                    <li><a asp-action="GetAllAuctions" asp-controller="Auctions">Auctions</a></li>
                </ul>
                @if (ViewBag.aucGoing != null)
                {
                    foreach (var item in ViewBag.aucGoing as IEnumerable<Auction>)
                    {
                        <div class="row product-gallery-list-block">
                            <div class="product-layout product-list col-xs-12">
                                <div class="product-thumb">
                                    <div class="image">
                                        <a asp-controller="Auctions" asp-action="AuctionRoom" asp-route-id="@item.Id"><img class="img-responsive" src="~/images/note.png"></a>
                                    </div>
                                    <div>
                                        <div class="caption">
                                            <h4><a asp-controller="Auctions" asp-action="AuctionRoom" asp-route-id="@item.Id">@item.Product.Title</a></h4><br />
                                            <p> <i class="fa fa-key"></i> @item.Id</p>
                                            <p class="price">
                                                <span class="price-tax">Starting Price: @item.StartingPrice $</span>
                                            </p>
                                            <p>Start: @item.StartDateTime</p>
                                            <p>End: @item.EndDateTime</p>
                                        </div>
                                        <div class="button-group">
                                            <a class="btn special-button" asp-controller="Auctions" asp-action="AuctionRoom" asp-route-id="@item.Id"><i class="fa fa-gavel"></i> <span>Auctions</span></a>
                                            @*<button class="btn special-button" type="button"><i class="fa fa-heart"></i></button>
                                                <button class="btn special-button" type="button"><i class="fa fa-exchange"></i></button>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else if (ViewBag.aucGoing == null)
                {
                    <h4>There Are No Auction Rooms Available !!!</h4>
                }
                @if (ViewBag.aucComming.Count != 0)
                {
                    foreach (var item in ViewBag.aucComming as IEnumerable<Auction>)
                    {

                        <div class="row product-gallery-list-block">
                            <div class="product-layout product-list col-xs-12">
                                <div class="product-thumb">
                                    <div class="image">
                                        <a asp-controller="Auctions" asp-action="AuctionRoom" asp-route-id="@item.Id"><img class="img-responsive" src="~/images/note.png"></a>
                                    </div>
                                    <div>
                                        <div class="caption">
                                            <h4><a asp-controller="Auctions" asp-action="AuctionRoom" asp-route-id="@item.Id">@item.Product.Title</a></h4><br />
                                            <p> <i class="fa fa-key"></i> @item.Id</p>
                                            <p class="price">
                                                <span class="price-tax">Starting Price: @item.Product.Price $</span>
                                                @*<span class="price-old">$122.00</span>
                                                    <span class="price-tax">Ex Tax: $90.00</span>*@
                                            </p>
                                            <p>Start: @item.StartDateTime</p>
                                            <p>End: @item.EndDateTime</p>
                                        </div>
                                        <div class="button-group">
                                            <a class="btn special-button" asp-controller="Auctions" asp-action="AuctionRoom" asp-route-id="@item.Id"><i class="fa fa-gavel"></i> <span>Auctions</span></a>
                                            @*<button class="btn special-button" type="button"><i class="fa fa-heart"></i></button>
                                                <button class="btn special-button" type="button"><i class="fa fa-exchange"></i></button>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <h4>There Are No Auction Rooms Available !!!</h4>
                }
        
                @if (ViewBag.aucEnded.Count != 0)
                {
                    foreach (var item in ViewBag.aucEnded as IEnumerable<Auction>)
                    {
                        <div class="row product-gallery-list-block">
                            <div class="product-layout product-list col-xs-12">
                                <div class="product-thumb">
                                    <div class="image">
                                        <a asp-controller="Auctions" asp-action="AuctionRoom" asp-route-id="@item.Id"><img class="img-responsive" src="~/images/note.png"></a>
                                    </div>
                                    <div>
                                        <div class="caption">
                                            <h4><a asp-controller="Auctions" asp-action="AuctionRoom" asp-route-id="@item.Id">@item.Product.Title</a></h4><br />
                                            <p> <i class="fa fa-key"></i> @item.Id</p>
                                            <p class="price">
                                                <span class="price-tax">Starting Price: @item.Product.Price $</span>
                                                @*<span class="price-old">$122.00</span>
                                                    <span class="price-tax">Ex Tax: $90.00</span>*@
                                            </p>
                                            <p>Start: @item.StartDateTime</p>
                                            <p>End: @item.EndDateTime</p>
                                        </div>
                                        <div class="button-group">
                                            <a class="btn special-button"><i class="fa fa-eye"></i> <span>Views</span></a>
                                            @*<button class="btn special-button" type="button"><i class="fa fa-heart"></i></button>
                                                <button class="btn special-button" type="button"><i class="fa fa-exchange"></i></button>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <h4>There Are No Auction Rooms Available !!!</h4>
                }
            </div>
            <!--end main content-->
        </div>
    </div>
</div>
<!--End of middle content-->

