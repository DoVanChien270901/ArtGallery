@{
    Layout = "_Layout";
    ViewData["Title"] = "Home Page";
}
<!--middle content-->
<div id="container">
    <div class="container">
        <div class="row">
            <!--left sidebar---->
            <aside class="col-sm-3 left-sidebar">
                <div class="box category">
                    <div class="box-heading">
                        <h3>Categories <i class="fa fa-angle-up"></i></h3>
                    </div>
                    <div class="box-content test">
                        <div class="box-category">
                            <ul class="menu">
                                @foreach (var item in ViewBag.cate)
                                {
                                    <li><a asp-action="Home" asp-fragment="Home" asp-route-cateName="@item.Name" class="custom_hover">@item.Name</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </aside>
            <!--end sidebar-->
            <!--main content-->
            <div id="content" class="col-sm-9">
                <!--slidder--->
                <div class="slidder">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                        </ol>
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <img src="images/banner1.jpg" class="img-responsive" alt="1">
                            </div>

                            <div class="item">
                                <img src="images/banner2.jpg" class="img-responsive" alt="2">
                            </div>

                            <div class="item">
                                <img src="images/banner3.jpg" class="img-responsive" alt="3">
                            </div>
                        </div>
                        <!-- Controls -->
                        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                            <i class="fa fa-chevron-left"></i>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                            <i class="fa fa-chevron-right"></i>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <!--banner images-->
                <div class="banner-image-block row">
                    <div class="col-sm-4 col-xs-12">
                        <div class="product-thumb transiction">
                            <div class="banner-image">
                                <a href="single-product.html"><img src="images/art15.jpg" class="img-responsive"></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 col-xs-12">
                        <div class="product-thumb transiction">
                            <div class="banner-image">
                                <a href="single-product.html"><img src="images/art17.jpg" class="img-responsive"></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 col-xs-12">
                        <div class="product-thumb transiction">
                            <div class="banner-image">
                                <a href="single-product.html"><img src="images/art19.jpg" class="img-responsive"></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <!--end banner images-->
                <!---featured image-->
                <div class="box featured-product featured-product-heading">
                    <div class="box-heading">
                        <h3>Featured Products</h3>
                    </div>
                    <div class="box-content">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="product-layout col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                    <div class="product-thumb transiction">
                                        <a class="compare-button"><i class="fa fa-retweet"></i></a>
                                        <a class="wishlist-button"><i class="fa fa-heart-o"></i></a>
                                        <div class="image">
                                            <a asp-action="Detail" asp-controller="Home" asp-route-id="@item.Id"><img href="@Url.Content(item.ProductImages[0].ImagePath)" src="@Url.Content(item.ProductImages[0].ImagePath)" @*class="img-responsive"*@></a>
                                        </div>
                                        <div class="caption">
                                            <div class="product-name"><a asp-action="Detail" asp-controller="Products" asp-route-id="@item.Id">@item.Title</a></div>
                                            <div class="price">
                                                <span class="price-new">@item.Price</span>
                                                <span class="price-old"></span>
                                            </div>
                                        </div>
                                        <div class="cart-button">
                                            <a class="btn btn-add-cart" href="cart.html">
                                                <span>
                                                    Add to Cart
                                                </span>
                                                <i class="fa fa-shopping-cart"></i>
                                            </a>
                                        </div>

                                    </div>
                                </div>
                            }
                    </div>
                </div>
                <div class="clearfix"></div>
                <!---end featured image-->
                <!---best seller image-->
                <!---end best seller image-->
            </div>
            <!--end main content-->
        </div>
    </div>
</div>
<!--End of middle content-->