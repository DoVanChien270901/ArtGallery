@model ArtGallery.ViewModel.System.Users.RegisterRequest
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--middle content-->
<div id="container">
    <div class="container">
        <div class="row">
            <!--left sidebar---->
            <aside class="col-sm-3 left-sidebar">
                <div class="box category">
                    <div class="box-heading">
                        <h3>@ViewData["Title"] <i class="fa fa-angle-up"></i></h3>
                    </div>
                    <div class="box-content test">
                        <div class="box-category">
                            <ul class="menu">
                                <li><a asp-action="Login" asp-controller="Users">Login</a></li>
                                <li><a asp-action="Register" asp-controller="Users">Register</a></li>
                                <li><a asp-action="ForgotPassword" asp-controller="Users">Forgotten Password</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </aside>
            <!--end sidebar-->
            <!--main content-->
            <div class="col-sm-9" id="content">
                <ul class="breadcrumb">
                    <li><a asp-action="Home" asp-controller="Home"><i class="fa fa-home"></i></a></li>
                    <li><a>@ViewData["Title"]</a></li>
                </ul>
                <h2>Register Account</h2>
                <p>
                    If you already have an account with us, please login at the
                    <a asp-action="Login" asp-controller="Users">login page</a>.
                </p>
                <form class="form-horizontal" asp-action="Register" asp-controller="Users" method="post">
                    <span class="text-danger">@Html.ValidationMessage("registerMessage")</span>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @*Account*@
                    <fieldset>
                        <legend>Your Account</legend>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">User Name</label>
                            <div class="col-sm-8">
                                <input asp-for="Name" type="text" class="form-control" placeholder="User Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Password</label>
                            <div class="col-sm-8">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Confirm Password</label>
                            <div class="col-sm-8">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </fieldset>
                    @*Profile*@
                    <fieldset id="account">
                        <legend>Profile</legend>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">FullName</label>
                            <div class="col-sm-8">
                                <input asp-for="FullName" type="text" class="form-control" placeholder="FullName">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Gender</label>
                            <div class="col-sm-8">
                                <input type="radio" name="gender" value="Male">
                                <label style="font-weight:500;">Male</label>&nbsp;&nbsp;&nbsp;&nbsp;
                                <input type="radio" name="gender" value="Female">
                                <label style="font-weight:500;">Female</label>
                                <br />
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Address</label>
                            <div class="col-sm-8">
                                <input asp-for="Address" type="text" class="form-control" placeholder="Address">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Email</label>
                            <div class="col-sm-8">
                                <input asp-for="Email" type="text" class="form-control" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Day of Birth</label>
                            <div class="col-sm-8">
                                <input asp-for="DOB" type="date" class="form-control" placeholder="Day of Birt">
                                <span asp-validation-for="DOB" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Phone</label>
                            <div class="col-sm-8">
                                <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Phone">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                        </div>
                    </fieldset>
                    @*<fieldset>
                        <legend>Newsletter</legend>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Subscribe</label>
                            <div class="col-sm-8">
                                <label class="radio-inline">
                                    <input type="radio" value="1" name="newsletter">
                                    Yes
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" checked="checked" value="0" name="newsletter">
                                    No
                                </label>
                            </div>
                        </div>
                    </fieldset>*@
                    <div class="buttons">
                        <div class="pull-right">
                            @*I have read and agree to the <a class="agree"><b>Privacy Policy</b></a> <input type="checkbox" value="1" name="agree" style="vertical-align:text-bottom">
                            &nbsp;*@
                            <button type="submit" class="btn btn-custom">Create Account</button>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
            <!--end main content-->
        </div>
    </div>
</div>
<!--End of middle content-->
