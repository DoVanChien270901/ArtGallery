@model ArtGallery.Data.Entities.ProfileUser
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--middle content-->
<div id="container">
    <div class="container">
        <div class="row">
            <!--left sidebar---->
            <aside class="col-sm-3 left-sidebar">
                <div class="box category">
                    <div class="box-heading">
                        <h3>@ViewData["Title"] <i class="fa fa-angle-up"></i></h3>
                    </div>
                    <div class="box-content test">
                        <div class="box-category">
                            <ul class="menu">
                                <li><a>Forgotten Password</a></li>
                                <li><a>Order History</a> </li>
                                <li><a>Transactions</a> </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </aside>
            <!--end sidebar-->
            <div class="col-sm-9" id="content">
                <ul class="breadcrumb">
                    <li><a><i class="fa fa-home"></i></a></li>
                    <li><a>Profile</a></li>
                </ul>
                <form class="form-horizontal" asp-action="Profile" asp-controller="Users" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <fieldset id="account">
                        <legend>Profile User</legend>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">FullName</label>
                            <div class="col-sm-8">
                                <input asp-for="FullName" type="text" class="form-control" placeholder="FullName">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Gender</label>
                            <div class="col-sm-8">
                                <input asp-for="Gender" type="text" class="form-control" placeholder="Gender">
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Address</label>
                            <div class="col-sm-8">
                                <input asp-for="Address" type="text" class="form-control" placeholder="Address">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Email</label>
                            <div class="col-sm-8">
                                <input asp-for="Email" type="text" class="form-control" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Day of Birt</label>
                            <div class="col-sm-8">
                                <input asp-for="DOB" type="date" class="form-control" placeholder="Day of Birt">
                                <span asp-validation-for="DOB" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Phone</label>
                            <div class="col-sm-8">
                                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Phone">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                        </div>
                    </fieldset>
                    <!-- <fieldset>
                        <legend>Newsletter</legend>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Subscribe</label>
                            <div class="col-sm-8">
                                <label class="radio-inline">
                                    <input type="radio" value="1" name="newsletter">
                                    Yes
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" checked="checked" value="0" name="newsletter">
                                    No
                                </label>
                            </div>
                        </div>
                    </fieldset> -->
                    <div class="buttons">
                        <div class="pull-right">
                            @*I have read and agree to the <a class="agree"><b>Privacy Policy</b></a> <input type="checkbox" value="1" name="agree" style="vertical-align:text-bottom"> &nbsp;*@
                            <button type="submit" class="btn btn-custom">Upload Profile</button>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--End of middle content-->
