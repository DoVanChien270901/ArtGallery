                <h2>Profile User</h2>
                <form class="form-horizontal" asp-action="Register" asp-controller="Users" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <fieldset id="account">
                        <legend>Profile</legend>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">FullName</label>
                            <div class="col-sm-8">
                                <input asp-for="FullName" type="text" class="form-control" placeholder="FullName">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Gender</label>
                            <div class="col-sm-8">
                                <input asp-for="Gender" type="text" class="form-control" placeholder="Gender">
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Address</label>
                            <div class="col-sm-8">
                                <input asp-for="Address" type="text" class="form-control" placeholder="Address">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Avatar</label>
                            <div class="col-sm-8">
                                <input asp-for="Avatar" type="file" class="form-control" placeholder="Avatar">
                                <span asp-validation-for="Avatar" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Email</label>
                            <div class="col-sm-8">
                                <input asp-for="Email" type="text" class="form-control" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Day of Birt</label>
                            <div class="col-sm-8">
                                <input asp-for="DOB" type="date" class="form-control" placeholder="Day of Birt">
                                <span asp-validation-for="DOB" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Phone</label>
                            <div class="col-sm-8">
                                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Phone">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>Newsletter</legend>
