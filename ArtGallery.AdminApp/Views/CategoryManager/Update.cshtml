@using ArtGallery.ViewModel.System.Admin;
@model CategoryModelView
@{
    ViewData["Title"] = "Update Category";
}
<div class="card">
    <div class="card-header">
        <h4 class="card-title">Update Category</h4>
    </div>
    <div class="card-content">
        <div class="card-body">
            <form class="form form-horizontal" asp-action="Update" asp-controller="CategoryManager" method="post">
                <div class="form-body">
                    <div class="row col-md-10 center-block">
                        <div class="col-md-4">
                            <label>@Html.DisplayNameFor(c=>c.Id)</label>
                        </div>
                        <div class="col-md-8 form-group">
                            <input type="text" class="form-control" asp-for="Id" readonly="readonly">
                        </div>
                        <div class="col-md-4">
                            <label>@Html.DisplayNameFor(c => c.Name)</label>
                        </div>
                        <div class="col-md-8 form-group">
                            <input type="text" asp-for="Name" class="form-control" >
                        </div>
                        <div class="col-md-4">
                            <label>@Html.DisplayNameFor(c => c.Description)</label>
                        </div>
                        <div class="col-md-8 form-group">
                            <textarea class="form-control" asp-for="Description" rows="3" style="height: 350px;"></textarea>
                        </div>
                        <div class="col-sm-12 d-flex justify-content-end">
                            <input type="submit" class="btn btn-primary rounded-pill" value="Save">&nbsp;&nbsp;

                            @Html.ActionLink("Delete", "Delete", "CategoryManager", new { id = Model.Id }, new { @class = "btn btn-danger rounded-pill" })&nbsp;&nbsp;
                            @Html.ActionLink("Back", "Index", "CategoryManager", null, new { @class = "btn btn-secondary rounded-pill" })

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>