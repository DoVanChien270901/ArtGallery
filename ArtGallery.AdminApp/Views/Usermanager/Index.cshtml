@using ArtGallery.ViewModel.System.Admin;
@model IEnumerable<UserModelView>
@{
    Layout = "_Layout";
    ViewData["Title"] = "User List";
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>@ViewData["Title"]</h3>
                <p class="text-subtitle text-muted">For admin to check they list</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">@Html.ActionLink("Dashboard", "Index", "Home")</li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">
                <div class="row mb-3">
                    <div class="col-sm-12 col-md-4">
                        <div class="dataTables_length" id="table1_length">
                            <form asp-action="Index" asp-controller="Usermanager" method="post">
                                <h6>Search by Name</h6>
                                <input class="form-control" type="text" name="name" placeholder="Search">
                                <div style="padding:4px;"></div>
                                <input type="submit" value="Search" class="btn btn-success" />
                            </form>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3"></div>
                    <div class="col-sm-12 col-md-3"> </div>
                    <div class="col-sm-12 col-md-3"></div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-light mb-0">
                        <thead>
                            <tr>
                                <th class="col-2">@Html.DisplayNameFor(c => c.Name)</th>
                                @*<th>@Html.DisplayNameFor(c => c.Password)</th>*@
                                <th class="col-1">Roles</th>
                                <th class="col-1">Orders</th>
                                <th class="col-1">Transactions</th>
                                <th class="col-1">FeedBacks</th>
                                <th class="col-2">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    @*<td>@item.Password</td>*@
                                    <td>
                                        @if (item.Roles.ToString() == "Admin")
                                        {
                                            <a class="btn btn-danger">@item.Roles.ToString()</a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-success">@item.Roles.ToString()</a>
                                        }
                                    </td>
                                    <td>
                                        @item.OrdersCount
                                    </td>
                                    <td>
                                        @item.TransactionsCount
                                    </td>
                                    <td>
                                        @item.FeedBacksCount
                                    </td>
                                    <td>
                                        <span onclick="return confirm('Are you sure want to delete this data ?')">
                                            @Html.ActionLink("Delete", "Delete", "UserManager", new { name = item.Name }, new { @class = "btn btn-danger" })
                                        </span>
                                        @Html.ActionLink("Details", "Details", "UserManager", new { name = item.Name }, new { @class = "btn btn-primary" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="container">
                @if (pager.TotalPages > 0)
                {
                    <ul class="pagination justify-content-end">
                        @if (pager.CurrentPage > 1)
                        {
                            @*<li class="page-item"><a class="page-link" asp-controller="UserManager" asp-action="Index" asp-route-pg="1">First</a></li>*@
                            <li class="page-item">
                                <a class="page-link" asp-controller="UserManager" asp-action="Index" asp-route-pg="@(pager.CurrentPage - 1)">Previous</a>
                            </li>
                        }
                        @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                        {
                            <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-controller="UserManager" asp-action="Index" asp-route-pg="@pge">@pge</a>
                            </li>
                        }
                        @if (pager.CurrentPage < pager.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-controller="UserManager" asp-action="Index" asp-route-pg="@(pager.CurrentPage + 1)">Next</a>
                            </li>
                            @*<li class="page-item">
                            <a class="page-link" asp-controller="CategoryManager" asp-action="Index" asp-route-pg="@(pager.TotalPages)">Last</a>
                        </li>*@
                        }
                    </ul>
                }
            </div>
        </div>
    </section>
</div>
<script src="~/assets/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/vendors/simple-datatables/simple-datatables.js"></script>
<script src="~/assets/js/mazer.js"></script>