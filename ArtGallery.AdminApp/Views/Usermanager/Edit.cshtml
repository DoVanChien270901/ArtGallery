@using ArtGallery.ViewModel.System.Admin;
@model EditProfileReq
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Profile";
}
<hr>
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-sm-10"><h2>@ViewData["Title"]</h2></div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->
            <div class="text-center">
                <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
            </div>
            <br />
        </div><!--/col-3-->
        <div class="col-sm-9">
            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <form class="form" asp-action="Edit" asp-controller="Usermanager" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="first_name" style="font-size:18px; font-weight:700;">ID</label>
                                <input readonly type="text" class="form-control" asp-for="AccountId">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="first_name" style="font-size:18px; font-weight: 700;">Full Name</label>
                                <input type="text" class="form-control" asp-for="FullName">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="last_name" style="font-size:18px; font-weight: 700;">Gender</label>
                                <input type="text" class="form-control" asp-for="Gender">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="phone" style="font-size:18px; font-weight: 700;">Address</label>
                                <input type="text" class="form-control" asp-for="Address">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="" style="font-size:18px; font-weight: 700;">Email</label>
                                <input type="email" class="form-control" asp-for="Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="" style="font-size:18px; font-weight: 700;">Phone Number</label>
                                <input type="text" class="form-control" asp-for="PhoneNumber">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="" style="font-size:18px; font-weight: 700;" class="font-bold">Date of Birth</label>
                                <input type="date" class="form-control" asp-for="DOB">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <div style="padding:4px;"></div>
                                <button class="btn btn btn-success" type="submit">Save</button>&nbsp;&nbsp;
                                @Html.ActionLink("Back To List", "Index", "Usermanager", null, new { @class = "btn btn-secondary" })
                            </div>
                        </div>
                    </form>
                </div><!--/tab-pane-->
            </div><!--/tab-pane-->
        </div><!--/tab-content-->
    </div><!--/col-9-->
</div><!--/row-->
<hr>
<br />
