@model ArtGallery.Data.Entities.Product
@{
    Layout = "_Layout";
    ViewData["Title"] = "Details Product";
}
<!--middle content-->
<form>
    <div class="row">
        <div class="col-sm-10"><h2>@ViewData["Title"]</h2></div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-xs-8">
            <p style="font-size: 18px;"><label style="font-weight: 700;">Product Id:</label> @Model.Id</p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-8">
            <p style="font-size: 18px;"><label style="font-weight: 700;">Title:</label> @Model.Title</p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-8">
            <p style="font-size: 18px;"><label style="font-weight: 700;">Description:</label> @Model.Description</p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-8">
            <p style="font-size: 18px;"><label style="font-weight: 700;">Create Date:</label> @Model.CreateDate</p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-8">
            <p style="font-size: 18px;"><label style="font-weight: 700;">Price:</label> @Model.Price</p>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model.ProductImages)
        {
            <div class="col-sm-6 col-md-4">
                @if (item.Thumbnail == true)
                {
                    <img src="@Url.Content(item.ImagePath)" style="width:220px; height:auto; padding-top:8px;" class="changeimg">
                }
                else if (item.Thumbnail == false)
                {
                    <img src="@Url.Content(item.ImagePath)" style="width:220px; height:auto; padding-top:8px;" class="changeimg">
                }
            </div>
        }
    </div>
</form>
<br />
   
