@model ArtGallery.ViewModel.System.Users.LoginRequest
@{
    Layout = "_Layout_Admin";
    ViewData["Title"] = "Login";
}
<div class="row h-100">
    <div class="col-lg-7 col-sm-12 col-md-9 col-12">
        <div id="auth-left">
            <h1 class="auth-title mt-2">Log in.</h1>
            <form asp-action="Login" asp-controller="Accounts" method="post" class="mt-5">
                <span class="text-danger">@Html.ValidationMessage("loginMessage")</span>
                <span asp-validation-for="Name" class="text-danger"></span>
                <div class="form-group position-relative has-icon-left mb-4">
                    <input asp-for="Name" type="text" class="form-control form-control" placeholder="Username">
                    <div class="form-control-icon">
                        <i class="bi bi-person"></i>
                    </div>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="form-group position-relative has-icon-left mb-4">
                    <input asp-for="Password" type="password" class="form-control form-control" placeholder="Password">
                    <div class="form-control-icon">
                        <i class="bi bi-shield-lock"></i>
                    </div>
                </div>
                <div class="form-check form-check-lg d-flex align-items-end">
                    <input class="form-check-input me-2" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label text-gray-600" for="flexCheckDefault">
                        Keep me logged in
                    </label>
                </div>
                <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5" type="submit">Log in</button>
            </form>
            <div class="text-center mt-5 text-lg fs-4">
                <p style="font-size: 1.2rem;" class="text-gray-600">
                    Don't have an account? <a asp-action="Register" asp-controller="Accounts" class="font-bold"> Sign up
                    </a>.
                </p>
                <p style="font-size: 1.2rem;"><a class="font-bold" href="auth-forgot-password.html">Forgot password?</a>.</p>
            </div>
        </div>
    </div>
    <div class="col-lg-5 col-md-3 col-12 d-none d-lg-block">
        <div id="auth-right">
        </div>
    </div>
</div>