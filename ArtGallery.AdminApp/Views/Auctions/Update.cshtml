@model ArtGallery.ViewModel.Catalog.Auctions.UpdateAuctionRequest
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-action="Update" asp-controller="Auctions" method="post">
    <h1>Update Auction</h1>
    <div class="form-group">
        <label class="col-sm-4 control-label">Room Id:<input style="border:none; outline:none" readonly asp-for="StartingPrice" type="number"></label>
    </div>
    <div class="form-group">
        <label class="col-sm-4 control-label">Starting Price</label>
        <div class="col-sm-8">
            <input asp-for="StartingPrice" type="number" class="form-control">
            <span asp-validation-for="StartingPrice" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4 control-label">PriceStep</label>
        <div class="col-sm-8">
            <input asp-for="PriceStep" type="number" class="form-control" >
            <span asp-validation-for="PriceStep" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4 control-label">Start DateTime</label>
        <div class="col-sm-8">
            <input asp-for="StartDateTime" class="form-control">
            <span asp-validation-for="StartDateTime" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4 control-label">EndDateTime</label>
        <div class="col-sm-8">
            <input asp-for="EndDateTime" class="form-control">
            <span asp-validation-for="EndDateTime" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn-success">Save</button>
</form>