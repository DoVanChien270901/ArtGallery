@model ArtGallery.Data.Entities.ProfileUser
@{
    Layout = "_Layout";
    ViewData["Title"] = "Winner Information";
}
<div class="card">
    <div class="card-header">
        <h4 class="card-title">@ViewData["Title"]</h4>
    </div>
    <div class="card-content">
        <div class="card-body">
            <form class="form form-horizontal" asp-action="Update" asp-controller="Auctions" method="post">
                <div class="form-body">
                    <div class="row col-md-10 center-block">
                        <div class="col-md-4">
                            <label class="font-bold">@Html.DisplayNameFor(c => c.Id):</label>
                        </div>
                        <div class="col-md-8 form-group">
                            <input readonly="readonly" class="form-control" asp-for="Id">
                        </div>
                        <div class="col-md-4">
                            <label class="font-bold">@Html.DisplayNameFor(c => c.FullName):</label>
                        </div>
                        <div class="col-md-8 form-group">
                            <input readonly="readonly" asp-for="FullName" class="form-control">
                        </div>
                        <div class="col-md-4">
                            <label class="font-bold">@Html.DisplayNameFor(c => c.Gender):</label>
                        </div>
                        <div class="col-md-8 form-group">
                            <input readonly="readonly" asp-for="Gender" class="form-control">
                        </div>
                        <div class="col-md-4">
                            <label class="font-bold">@Html.DisplayNameFor(c => c.Address):</label>
                        </div>
                        <div class="col-md-8 form-group">
                            <input readonly="readonly" asp-for="Address" class="form-control">
                        </div>
                        <div class="col-md-4">
                            <label class="font-bold">@Html.DisplayNameFor(c => c.Email):</label>
                        </div>
                        <div class="col-md-8 form-group">
                            <input readonly="readonly" asp-for="Email" class="form-control">
                        </div>
                        <div class="col-md-4">
                            <label class="font-bold">@Html.DisplayNameFor(c => c.PhoneNumber):</label>
                        </div>
                        <div class="col-md-8 form-group">
                            <input readonly="readonly" asp-for="PhoneNumber" class="form-control">
                        </div>
                        <div class="col-md-4">
                            <label class="font-bold">@Html.DisplayNameFor(c => c.DOB):</label>
                        </div>
                        <div class="col-md-8 form-group">
                            <input readonly="readonly" asp-for="DOB" class="form-control">
                        </div>
                        <div class="col-md-1"></div>
                        <div class="col-sm-12 d-flex justify-content-end">
                            @Html.ActionLink("Back To List", "GetAll", "Auctions", null, new { @class = "btn btn-secondary" })
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>